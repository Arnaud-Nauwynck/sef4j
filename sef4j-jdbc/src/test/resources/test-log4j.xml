<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>



	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d{HH:mm:ss} %-5p [%t] %c - %m%n"/>
        </layout>
	</appender>

	<appender name="err-file" class="org.apache.log4j.FileAppender">
		<param name="File" value="err-file.log"/>
		<param name="Append" value="false"/>
		<layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d{HH:mm:ss} %-5p [%t] %c - %m%n"/>
        </layout>
	</appender>

	<appender name="db-file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="db-file.log"/>
		<param name="Append" value="false"/>
		<param name="MaxBackupIndex" value="5"/>
		<param name="MaxFileSize" value="10Mb"/>
		<layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d{HH:mm:ss} %m%n"/>
        </layout>
	</appender>



	<logger name="db" additivity="false">
		<level value="debug"/>
		<appender-ref ref="db-file"/>
	</logger>


	<root>
		<level value="debug"/>
		<appender-ref ref="stdout"/>
<!--
		<appender-ref ref="err-file"/>
-->
	</root>
	
</log4j:configuration>